{
  "name": "druid/php-sdk",
  "version": "2.0",
  "description": "DRUID SDK for PHP",
  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "keywords": ["dru-id", "druid", "sdk", "php"],
  "type": "library",
  "homepage": "http://developers.dru-id.com/",
  "authors": [
    {
      "name": "dru-id",
      "homepage": "https://github.com/dru-id/druid-php-sdk/graphs/contributors"
    }
  ],
  "require": {
    "php": "^5.5 || ^7.0",
    "lib-curl": "*",
    "ext-mcrypt": "*",
    "ext-dom": "*",
    "monolog/monolog": "1.21.*",
    "doctrine/cache": "^1.6",
    "guzzlehttp/guzzle": "^6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6",
    "codeception/codeception": "^2.2",
    "codeception/specify": "*",
    "upscale/http-server-mock": "^4.0",
    "php-mock/php-mock": "^1.0",
    "php-mock/php-mock-prophecy": "^0.0.2"
  },
  "autoload": {
    "psr-4": {
      "Genetsis\\": "src/Genetsis"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Genetsis\\": ["tests/unit/Genetsis", "tests/integration/Genetsis"]
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"mkdir('src/main/php/lib', 0777, true);\""
    ]
  }
}
