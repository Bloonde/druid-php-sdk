{
  "name": "druid/php-sdk",
  "version": "2.0",
  "description": "DRUID SDK for PHP",
  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "keywords": [
    "dru-id",
    "druid",
    "sdk",
    "php"
  ],
  "type": "library",
  "homepage": "http://developers.dru-id.com/",
  "authors": [
    {
      "name": "dru-id",
      "homepage": "https://github.com/dru-id/druid-php-sdk/graphs/contributors"
    }
  ],
  "require": {
    "lib-curl": "*",
    "ext-mcrypt": "*",
    "ext-dom": "*",
    "monolog/monolog": "1.21.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6",
    "codeception/codeception": "^2.2",
    "codeception/specify": "*",
    "upscale/http-server-mock": "^4.0"
  },
  "config": {
    "vendor-dir": "src/main/php/lib/vendor"
  },
  "autoload": {
    "psr-4": {
      "Genetsis\\": "src"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"mkdir('src/main/php/lib', 0777, true);\""
    ]
  }
}
